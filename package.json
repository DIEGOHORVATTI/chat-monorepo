{
  "name": "beerpass",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/**"
    ],
    "catalog": {
      "@repo/eslint": "^0.1.0",
      "@repo/typescript": "^0.1.0",
      "@repo/contracts": "^0.1.0",
      "@repo/emails": "^0.1.0",
      "@repo/service-core": "^0.1.0",
      "@orpc/contract": "^1.9.0",
      "@orpc/react-query": "^1.9.0",
      "@orpc/client": "^1.9.0",
      "@orpc/openapi-client": "^1.9.0",
      "@orpc/server": "^1.9.0",
      "react-dom": "^19.2.0",
      "@types/react": "^19.2.0",
      "@types/react-dom": "^19.2.0",
      "react": "^19.2.0",
      "typescript": "^5.1.3",
      "zod": "^4.1.0",
      "@eslint/js": "^9.27.0",
      "eslint": "^9.27.0"
    }
  },
  "devDependencies": {
    "pre-commit": "1.2.2"
  },
  "scripts": {
    "dev": "bun run --cwd apps/frontend dev & bun run --cwd apps/backend dev & bun run --cwd packages/emails dev",
    "dev:frontend": "bun run --cwd apps/frontend dev",
    "dev:backend": "bun run --cwd apps/backend dev",
    "dev:email": "bun run --cwd packages/emails dev",
    "build": "bun run --cwd apps/backend build && bun run --cwd apps/frontend build",
    "build:frontend": "bun run --cwd apps/frontend build",
    "build:backend": "bun run --cwd apps/backend build",
    "prettier:check": "bunx prettier --write \"apps/*/src/**/*.{js,jsx,ts,tsx}\"",
    "lint:frontend": "bun run --cwd apps/frontend lint",
    "lint:backend": "bun run --cwd apps/backend lint",
    "lint:fix:frontend": "bun run --cwd apps/frontend lint --fix",
    "lint:fix:backend": "bun run --cwd apps/backend lint --fix",
    "type-check:backend": "bun run --cwd apps/backend type-check",
    "type-check:frontend": "bun run --cwd apps/frontend type-check",
    "type-check": "bun run --cwd apps/frontend type-check && bun run --cwd apps/backend type-check",
    "setup:frontend": "cd apps/frontend && bun install",
    "setup:backend": "cd apps/backend && bun install && bun run db:generate",
    "db:generate": "bun run --cwd apps/backend db:generate",
    "db:migrate": "bun run --cwd apps/backend db:migrate",
    "db:push": "bun run --cwd apps/backend db:push",
    "db:studio": "bun run --cwd apps/backend db:studio",
    "postinstall": "echo 'Skipping postinstall - run db:generate after setup'"
  }
}
