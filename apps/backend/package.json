{
  "name": "@repo/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/router.ts"
    }
  },
  "dependencies": {
    "@orpc/contract": "catalog:",
    "@orpc/server": "catalog:",
    "@repo/contracts": "catalog:",
    "@repo/emails": "catalog:",
    "@orpc/openapi": "^1.8.4",
    "@repo/service-core": "catalog:",
    "zod": "catalog:",
    "@orpc/zod": "^1.8.4",
    "@react-email/render": "^2.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "nodemailer": "^7.0.5",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@repo/eslint": "workspace:*",
    "@repo/typescript": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "catalog:",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.11.10",
    "@vitest/ui": "^4.0.14",
