{
  "extends": "@repo/typescript/tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["bun-types", "vitest/globals"],
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@contacts/*": ["./src/modules/contacts/*"],
      "@identity/*": ["./src/modules/identity/*"],
      "@notifications/*": ["./src/modules/notifications/*"],
      "@chat/*": ["./src/modules/chat/*"]
    }
  }
}
